apiVersion: v1
kind: Pod
metadata:
  name: {{ getenv "COREOS_PRIVATE_IPV4" }}-node
  labels:
    hostname: {{ getenv "COREOS_PRIVATE_IPV4" }}
    name: {{ getenv "COREOS_PRIVATE_IPV4" }}-node
  annotations:
    metrics: |
      - name: node-exporter
        port: 9100
spec:
  containers:
  - name: node-exporter
    image: prom/node-exporter
    ports:
    - containerPort: 9100
